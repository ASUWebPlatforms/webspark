{% set classes = [] %}
{% if ( bundle == 'article' ) %}
  {% set classes = classes|merge(['type--article']) %}
{% endif %}
{% if ( bundle == 'card-image-and-contet' ) %}
  {% set classes = classes|merge(['h2']) %}
{% endif %}
{% if heading|length > 14 %}
  {% set classes = classes|merge(['article']) %}
{% endif %}

<{{ html_tag }}{{ classes|length > 0 ? attributes.addClass(classes) }}>
  {{ heading }}
</{{ html_tag }}>
